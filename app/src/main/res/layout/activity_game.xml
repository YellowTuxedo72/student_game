<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ЗАДНИЙ СЛОЙ (дальний фон) -->
    <FrameLayout
        android:id="@+id/backgroundLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/backgroundImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/todo3"
            android:scaleType="fitXY"
            android:src="@drawable/office_outside"/>
    </FrameLayout>

    <!-- СРЕДНИЙ СЛОЙ (основной контент / офис) -->
    <FrameLayout
        android:id="@+id/contentLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/characterImage"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/todo2"
            android:scaleType="fitCenter"
            android:src="@drawable/character_1"
            android:visibility="visible" />

    </FrameLayout>

    <!-- ПЕРЕДНИЙ СЛОЙ (передний план / эффекты / рамки) -->
    <FrameLayout
        android:id="@+id/uiLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/foregroundImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/todo"
            android:scaleType="fitXY"
            android:src="@drawable/office_2" />

        <Button
            android:id="@+id/button1"
            android:layout_width="124dp"
            android:layout_height="86dp"
            android:text="@string/yes"
            android:translationX="220dp"
            android:translationY="290dp"
            android:background="@drawable/button_round"
            android:textColor="#FFFFFF"/>

        <!-- Кнопка 2 -->
        <Button
            android:id="@+id/button2"
            android:layout_width="127dp"
            android:layout_height="81dp"
            android:text="@string/no"
            android:translationX="550dp"
            android:translationY="290dp"
            android:background="@drawable/button_round"
            android:textColor="#FFFFFF"/>
    </FrameLayout>

</FrameLayout>
